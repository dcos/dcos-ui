{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://schema.dcos/acl/acls/acl/permissions",
  "title": "DCOS ACL: Single ACL permissions.",
  "type": "object",
  "properties": {
    "groups": {
      "title": "Groups that are part of this ACL",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "gid": {
            "title": "Group's ID",
            "type": "string"
          },
          "groupurl": {
            "title": "Group's URL",
            "type": "string"
          },
          "actions": {
            "type": "array",
            "items": {
              "allOf": [
                {"$ref": "http://schema.dcos/acl/action"}
              ]
            }
          }
        }
      }
    },
    "users": {
      "title": "Users that are part of this ACL",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "uid": {
            "title": "User's ID",
            "type": "string"
          },
          "userurl": {
            "title": "User's URL",
            "type": "string"
          },
          "actions": {
            "type": "array",
            "items": {
              "allOf": [
                {"$ref": "http://schema.dcos/acl/action"}
              ]
            }
          }
        }
      }
    }
  },
  "required": [
    "groups",
    "users"
  ]
}

