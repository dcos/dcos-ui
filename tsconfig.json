{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["es5", "es6", "esnext", "dom"],
    "allowJs": false,
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "listEmittedFiles": true,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "@dcos/http-service": ["src/typings/dcos__http-service"],
      "@extension-kid/data-layer": ["packages/@extension-kid/data-layer"],
      "*": ["*", "packages/*", "src/typings/*"],
      "#SRC/*": ["src/*"],
      "#LOCALE": ["locale/*"],
      "#EXTERNAL_PLUGINS/*": ["../dcos-ui-plugins-private/*"],
      "#PLUGINS/*": ["plugins/*"]
    }
  },
  "include": ["src/**/*", "packages/**/*", "plugins/**/*"],
  "exclude": ["node_modules", "src/styles/**/*"]
}
