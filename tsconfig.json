{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["es5", "es6", "esnext", "dom"],
    "allowJs": false,
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "listEmittedFiles": true,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@dcos/http-service": ["src/typings/dcos__http-service"],
      "@dcos/mesos-client": ["src/typings/dcos__mesos-client"],
      "@extension-kid/core": ["node_modules/@extension-kid/core"],
      "@extension-kid/*": ["packages/@extension-kid/*"],
      "@d2iq/*": ["packages/@d2iq/*"],
      "@d2iq/dsl-filter": ["src/typings/d2iq__dsl-filter"],
      "*": ["*", "packages/*", "src/typings/*"],
      "#SRC/*": ["src/*"],
      "#LOCALE/*": ["locale/*"],
      "#EXTERNAL_PLUGINS/*": ["plugins-ee/*"],
      "#PLUGINS/*": ["plugins/*"]
    }
  },
  "include": [
    "src/**/*",
    "packages/**/*",
    "plugins/**/*",
    "plugins-ee/**/*",
    "locale/**/*"
  ],
  "exclude": ["node_modules", "src/styles/**/*"]
}
