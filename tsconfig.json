{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": ["es5", "es6", "esnext", "dom"],
    "listEmittedFiles": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,

    "noImplicitAny": false,

    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "paths": {
      "@dcos/http-service": ["src/typings/dcos__http-service"],
      "@dcos/mesos-client": ["src/typings/dcos__mesos-client"],
      "@extension-kid/core": ["node_modules/@extension-kid/core"],
      "@extension-kid/*": ["packages/@extension-kid/*"],
      "*": ["*", "packages/*", "src/typings/*"],
      "#SRC/*": ["src/*"],
      "#LOCALE/*": ["locale/*"],
      "#EXTERNAL_PLUGINS/*": ["plugins-ee/*"],
      "#PLUGINS/*": ["plugins/*"],
      "#PLUGINS": ["plugins/index"]
    }
  },
  "include": [
    "src/**/*",
    "packages/**/*",
    "plugins/**/*",
    "plugins-ee/**/*",
    "locale/**/*"
  ],
  "exclude": ["node_modules", "src/styles/**/*"]
}
