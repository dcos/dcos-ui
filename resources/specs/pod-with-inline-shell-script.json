{
  "id": "/pod-with-inline-shell-script",
  "containers": [
    {
      "name": "container-1",
      "resources": {
        "cpus": 0.1,
        "mem": 10
      },
      "exec": {
        "command": {
          "shell": "while true ; do echo 'test' ; sleep 100 ; done"
        }
      }
    }
  ],
  "scaling": {
    "kind": "fixed",
    "instances": 1
  },
  "networks": [
    {
      "mode": "host"
    }
  ]
}
