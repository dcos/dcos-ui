{
  "id": "/app-with-external-volume",
  "instances": 1,
  "cpus": 1,
  "mem": 128,
  "cmd": "while true ; do echo 'test' > test/echo ; sleep 100 ; done",
  "container": {
    "volumes": [
      {
        "containerPath": "test",
        "external": {
          "name": "test",
          "provider": "dvdi",
          "options": {
            "dvdi/driver": "rexray"
          },
          "size": 128
        },
        "mode": "RW"
      }
    ],
    "type": "MESOS",
    "docker": {
      "image": "busybox"
    }
  }
}
