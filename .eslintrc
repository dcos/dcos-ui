{
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
	"parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "cy": true,
    "Cypress": true,
    "context": true,
    "xcontext": true
  },

  "rules": {
    "eqeqeq": ["error", "smart"],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-unneeded-ternary": ["error"],
    "prefer-const": ["error", { "destructuring": "all", "ignoreReadBeforeAssign": false }],
    "spaced-comment": ["error", "always"]
  }
}
